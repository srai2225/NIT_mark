    <!--
    - PRODUCT GRID
  -->

    <div class="product-main">
        <br><br><br>
        <div class="header-alert-news">
            <% if(locals.filteredItems[0]){ %>
            <h2><%= filteredItems[0].type %></h2>
            <% } %>
            <br>
        </div>
        <div class="product-grid">
            <% for(let i=0; i<filteredItems.length; i++){ %>
                <% if(locals.filteredItems[i]){ %>
                    <div onclick="window.location.href='/items/<%= filteredItems[i].name %>'" class="showcase">
                        <% } %>

                            <div class="showcase-banner">

                                <img src="<%= filteredItems[i].imageURL %>" alt="Mens Winter Leathers Jackets"
                                    width="300" class="product-img default">
                                <img src="<%= filteredItems[i].image2URL %>" alt="Mens Winter Leathers Jackets"
                                    width="300" class="product-img hover">

                                <% if(filteredItems[i].offer==="sale" ){ %>
                                    <p class="showcase-badge angle black">sale</p>
                                    <% }else if(filteredItems[i].offer==="new" ){ %>
                                        <p class="showcase-badge angle pink">new</p>
                                        <% }else{ %>
                                            <p class="showcase-badge">
                                                <%= filteredItems[i].offer %>
                                            </p>
                                            <% } %>

                                                <div class="showcase-actions">

                                                    <button class="btn-action">
                                                        <ion-icon name="heart-outline"></ion-icon>
                                                    </button>

                                                    <button class="btn-action">
                                                        <ion-icon name="eye-outline"></ion-icon>
                                                    </button>

                                                    <button class="btn-action">
                                                        <ion-icon name="repeat-outline"></ion-icon>
                                                    </button>

                                                    <button class="btn-action">
                                                        <ion-icon name="bag-add-outline"></ion-icon>
                                                    </button>

                                                </div>

                            </div>

                            <div class="showcase-content">

                                <a href="#" class="showcase-category">
                                    <%= filteredItems[i].name %>
                                </a>

                                <a href="#">
                                    <h3 class="showcase-title">
                                        <%= filteredItems[i].description %>
                                    </h3>
                                </a>

                                <div class="showcase-rating">
                                    <% let count=0; %>
                                        <% for (let j=0; j < filteredItems[i].rating; j++) { %>
                                            <ion-icon name="star"></ion-icon>
                                            <% count++; %>
                                                <% } %>
                                                    <% while (count < 5) { %>
                                                        <ion-icon name="star-outline"></ion-icon>
                                                        <% count++; %>
                                                            <% } %>
                                </div>


                                <div class="price-box">
                                    <p class="price">
                                        <%= filteredItems[i].price %>
                                    </p>
                                    <del>
                                        <%= filteredItems[i].deletedPrice %>
                                    </del>
                                </div>

                            </div>

                    </div>

                    <% } %>
        </div>

